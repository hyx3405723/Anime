  height: 85%;
  justify-content: center;
  align-items: center;
}

.comment_list .comment_item .comment_user .user_icon image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  margin-right: 15rpx;
}

.comment_list .comment_item .user_name {
