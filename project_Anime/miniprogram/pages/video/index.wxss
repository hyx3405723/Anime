.album_warp {
  padding: 20rpx;
}

.album_warp .album_titel {
  padding: 10rpx 0;
}

.album_warp .album_list .album_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 10rpx 0;
  border-bottom: 10rpx solid #eee;
}

.album_warp .album_list .album_item .album_cover {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.album_warp .album_list .album_item .album_cover image {
  /* width: 180rpx; */
  height: 130rpx;
}

.album_warp .album_list .album_item .album_info {
  position: relative;
  -webkit-box-flex: 3;
  -webkit-flex: 3;
  flex: 3;
  padding-left: 20rpx;
}

.album_warp .album_list .album_item .album_info .album_info_text {
  width: 100rpx;
  height: 50rpx;
  background-color: #d52a7e;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #fff;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.album_warp .album_list .album_item .album_info .album_name {
  padding: 10rpx 0;
  color: #888;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.album_warp .album_list .album_item .album_info .commenticonfont {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  right: -20%;
  color: rgb(201, 196, 196);
  background-color: rgb(255, 255, 255);
}
.album_warp .album_list .album_item .album_info .commenticonfont  text{
  font-weight: 400;
  color:#000;
  font-size: 33rpx;
}
