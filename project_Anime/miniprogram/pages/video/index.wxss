.comment_list .comment_item {
  border-bottom: 5rpx solid #eee;
}

.comment_list .comment_item .comment_user {
  display: flex;
  height: 150rpx;
  padding-top: 19rpx;
  padding-left: 13rpx;
  width: 100%;
}

.comment_list .comment_item .comment_user .user_icon {
  width: 30%;
