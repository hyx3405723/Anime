@import "../../../style/iconfont.wxss";
page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.index_swiper swiper {
  position: relative;
  width: 750rpx;
  height: 340rpx;
  margin-top: 4rpx;
  border-bottom: 5rpx solid #eee;
}

.index_swiper swiper image {
  width: 100%;
}

.index_swiper swiper .text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: 400;
}

.index_swiper swiper .text text:first-child {
  position: relative;
  left: -230rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.index_cate {
  display: flex;
  margin: 20rpx 0rpx;
}

.index_cate navigator {
  flex: 1;
}

.index_cate navigator image {
  width: 23%;
}

.index_floor .floor_group {
  padding: 7rpx;
}

.index_floor .floor_group .floor_title {
  padding: 5rpx 0rpx;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
  font-size: 16px;
  color: #9a26e7;
}

.index_floor .floor_group .floor_title h1 {
  margin-left: 15rpx;
}

.index_floor .floor_group .floor_list {
  overflow: hidden;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.index_floor .floor_group .floor_list navigator {
  width: 48.5%;
  height: 110px;
  margin: 10rpx 5rpx 2.5rpx;
  position: relative;
}

.index_floor .floor_group .floor_list navigator image {
  width: 100%;
  height: 100% !important;
  border-radius: 15rpx;
}

.index_floor .floor_group .floor_list navigator .floor_name {
  position: absolute;
  width: 100%;
  height: 50rpx;
  left: 0;
  bottom: 0;
  color: #fff;
  background-image: linear-gradient(to right top, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0));
  font-size: 33rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
