page{
  padding: 0;
  margin: 0;
}
.comment{
  padding-left: 20rpx;
}
.comment_item{
  padding: 20rpx;
  padding-left: 0rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.comment_item image{
  width: 230rpx;
  height: 140rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
}
.comment_content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 28rpx;
}
.comment_foot{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
  color: rgb(141, 141, 141);
}
.comment_foo text{
  margin-bottom: 10rpx;
}
.hot{
  color: red;
}